<!DOCTYPE html>
<html>
<head>
  <title>Music</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>



<nav class="navbar navbar-default">
  <div class="container-fluid">
     <div class="navbar-header">
       <button type="button" class="navbar-toggle collapsed"
         data-toggle="collapse"
         data-target="#collapse-menu"
         aria-expanded="false">
   <span class="icon-bar"></span>
   <span class="icon-bar"></span>
   <span class="icon-bar"></span>
 </button>
</div>

<div class="collapse navbar-collapse" id="collapse-menu">


    <ul class="nav navbar-nav pull-right">
      <li><%= link_to "Home", '/pages/home' %></li>
      <li><%= link_to "Contact", '/pages/contact' %></li>
      <li><%= link_to "About", '/pages/about' %></li>
      <li><%= link_to "Bands Index", bands_url %></li>
      </ul>
  <% if signed_in? %>

  <li><%= link_to current_user.username, user_url(current_user) %></li>
  <li><%= button_to "Sign Out", session_url, method: :delete %></li>
  <% else %>

  <li><%= link_to "Sign Up", new_user_url %></li>
  <li><%= link_to "Sign In", new_session_url%></li>

  <% end %>

</nav>
</div>
<br>

<%= flash[:errors] if flash[:errors] %>
<div class="container">
  <%= yield %>
</div>


</body>
</html>
