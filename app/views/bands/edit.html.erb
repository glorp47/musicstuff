<div class="row">
  <div class="row-xs-offset-1">

  </div>
  <div class="col-xs-4">
    <div class="col-xs-offset-1">
      <h1>Edit Band</h1>
      <form action="<%= band_url(@band) %>" method="post">
        <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
        <input type="hidden" name="_method" value="patch">
        <div class="form-control">
        <label for="band[name]">Band Name</label>
        <input type="text" name="band[name]" value="<%= @band.name if @band %>"> <br>
      </div>
         <br><input type="submit" class="btn btn-primary" value="Update Band">
      </form>
    </div>
  </div>
  </div>
</div>
